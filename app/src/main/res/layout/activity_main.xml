<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.benshanyang.toolslibrary.widget.TitleBarView
            android:id="@+id/title_bar_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            app:borderColor="#000000"
            app:borderWidth="2px"
            app:buttonDrawablePadding="0dp"
            app:buttonDrawableTop="@drawable/ic_shopping"
            app:buttonText="购物车"
            app:buttonTextColor="@color/colorPrimary"
            app:buttonTextSize="10sp"
            app:buttonType="text_button"
            app:immersionStatusBar="false"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:titleBarBackgroundColor="#ffcccc"
            app:titleBarHeight="?android:attr/actionBarSize"
            app:titleText="标题"
            app:titleTextColor="@color/colorPrimary"
            app:titleTextSize="18sp" />

        <com.benshanyang.toolslibrary.widget.PasswordEditText
            android:id="@+id/pwdet"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:actionButtonType="password_clear"
            app:borderVisibility="visible"
            app:bottomBorderWidth="1dp"
            app:digits="^[a-zA-Z0-9_@#%\*]+$"
            app:focusedBorderColor="@color/colorPrimary"
            app:hint="请输入密码"
            app:iconPaddingLeft="8dp"
            app:iconTextPaddingLeft="8dp"
            app:iconTextPaddingRight="5dp"
            app:normalBorderColor="#D5D5D5"
            app:textColor="#ff0000"
            app:textColorHint="#999999" />

        <com.benshanyang.toolslibrary.widget.ClearEditText
            android:id="@+id/cet"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:borderWidth="2px"
            app:clearIconPaddingLeft="10dp"
            app:clearIconPaddingRight="10dp"
            app:digits="^[a-z0-9]+$"
            app:gravity="left_center_vertical"
            app:hint="请输入内容"
            app:icon="@drawable/ic_shopping"
            app:iconPaddingLeft="8dp"
            app:iconTextPaddingLeft="8dp"
            app:isShowBorder="true"
            app:singleLine="false"
            app:textColor="@color/colorPrimary"
            app:textColorHint="#999999"
            app:textSize="14sp" />

        <com.benshanyang.toolslibrary.widget.RoundedImageView
            android:id="@+id/rounded_imageview"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:src="@mipmap/cat"
            app:borderColor="#008B45"
            app:borderWidth="2dp"
            app:cornerRadius="20dp"
            app:innerBorderColor="#FF7F24"
            app:innerBorderWidth="4dp"
            app:isCircle="true"
            app:maskColor="#99FFFFFF" />

        <com.benshanyang.toolslibrary.widget.RoundedImageView
            android:id="@+id/nice_iv1"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:src="@mipmap/cat"
            app:innerBorderColor="#0000FF"
            app:innerBorderWidth="2dp"
            app:borderColor="#FF7F24"
            app:borderWidth="2dp"
            app:cornerRadius="20dp" />

        <com.benshanyang.toolslibrary.widget.RoundedImageView
            android:id="@+id/nice_iv2"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:src="@mipmap/cat"
            app:borderColor="#FF7F24"
            app:borderWidth="2dp"
            app:cornerBottomLeftRadius="10dp"
            app:cornerBottomRightRadius="60dp"
            app:cornerTopLeftRadius="60dp"
            app:cornerTopRightRadius="10dp"
            app:maskColor="#33FFFF00"/>
        
        <com.benshanyang.toolslibrary.widget.RoundedButton
            android:id="@+id/btn"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="40dp"
            android:clickable="true"
            android:text="点我试试"
            app:cornerRadius="10dp"
            app:borderWidth="1dp"
            app:isShowBorder="true"
            app:pressedBorderColor="#FF0000"
            app:pressedBackgroundColor="#FFFF00"
            app:normalBorderColor="#D5D5D5"
            app:normalBackgroundColor="#F3F3F3"/>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
